{
    "name": "zicht/htmldev-bundle",
    "description": "Easy living styleguides with Symfony and Twig",
    "type": "symfony-bundle",
    "repositories": [{
        "type": "vcs",
        "url": "git@github.com:zicht/htmldev-bundle.git"
    }],
    "authors": [
        {
            "name": "Zicht Online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": "^7",
        "symfony/framework-bundle": "*",
        "symfony/routing": "*",
        "zicht/framework-extra-bundle": "^8",
        "zicht/twig-classes": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "zicht/standards-php": "^3"
    },
    "autoload": {
        "psr-0": {
            "": [
                "src/"
            ]
        }
    },
    "minimum-stability": "stable",
    "license": "MIT",
    "scripts": {
        "lint": [
            "./vendor/bin/phpcs -s src/Zicht/ --standard=vendor/zicht/standards-php/Zicht --extensions=php -p --parallel=$(nproc)"
        ],
        "lint-fix": [
            "./vendor/bin/phpcbf -s src/Zicht/ --standard=vendor/zicht/standards-php/Zicht --extensions=php --parallel=$(nproc)"
        ],
        "test": [
            "./vendor/phpunit/phpunit/phpunit"
        ]
    }
}
